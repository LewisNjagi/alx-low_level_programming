#include "main.h"

/**
 * times_table - main-entry point for the program.
 *
 * Return: void
 */

void times_table(void)
{
int n, m, p;

for (n = 0; n < 10; n++)
{
for (m = 0; m < 10; m++)
{
p = x * y;
if (m == 0)
{
_putchar(p + '0');
}
else if (m >= 10)
{
_putchar(' ');
_putchar(p / 10 + '0');
_putchar(p % 10 + '0');
}
else
{
_putchar(' ');
_putchar(' ');
_putchar(p + '0');
}
if (m != 9)
{
_putchar(',');
}
}
_putchar('\n');
}
}
